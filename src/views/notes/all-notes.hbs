<div class="row row-cols-1 row-cols-md-3">
    {{#each notes}}
    <div class="col mb-4">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title d-flex justify-content-between align-items-center">
                    {{title}} <a href="/notes/edit/{{id}}" class="fas fa-edit"></a>
                </h4>
                <h5>
                    {{> priorityPartial parameter=priority}}
                </h5>
                <p>{{description}}</p>
                <form action="/notes/delete/{{id}}?_method=DELETE" method="POST">
                    <input type="hidden" name="_method" value="DELETE">
                    <button class="btn btn-danger btn-block btn-sm" type="submit">
                        Delete
                    </button>
                </form>
            </div>
        </div>
    </div>
    {{else}}
    <div class="card mx-auto">
        <div class="card-body">
            <h3>{{viewUser.name}}</h3>
            <p class="lead">There are not notes yet.</p>
            <a href="/notes/add" class="btn btn-success btn-block"> Create One!</a>
        </div>
    </div>
    {{/each}}
</div>